<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <include layout="@layout/app_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coverImageProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space180"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/post_image" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-50dp"
                android:src="@drawable/ic_placeholder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:fontFamily="@font/lato"
                android:maxLines="1"
                android:text="@string/name"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/text18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginTop="@dimen/space3"
                android:layout_marginEnd="@dimen/space10"
                android:drawableStart="@drawable/ic_map_location"
                android:drawablePadding="@dimen/space4"
                android:fontFamily="@font/lato"
                android:maxLines="1"
                android:text="@string/moscow_russia"
                android:textColor="@color/black80"
                android:textSize="@dimen/text14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginTop="@dimen/space15"
                android:layout_marginEnd="@dimen/space20"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/_258"
                        android:textColor="@color/blackColor"
                        android:textSize="@dimen/text18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginTop="@dimen/space3"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/posts"
                        android:textAllCaps="true"
                        android:textColor="@color/black80"
                        android:textSize="@dimen/text12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myFollowerBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/_2_6k"
                        android:textColor="@color/blackColor"
                        android:textSize="@dimen/text18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginTop="@dimen/space3"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/followers"
                        android:textAllCaps="true"
                        android:textColor="@color/black80"
                        android:textSize="@dimen/text12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/myFollowingBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/_937"
                        android:textColor="@color/blackColor"
                        android:textSize="@dimen/text18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_marginTop="@dimen/space3"
                        android:layout_marginEnd="@dimen/space10"
                        android:fontFamily="@font/lato"
                        android:maxLines="1"
                        android:text="@string/following"
                        android:textAllCaps="true"
                        android:textColor="@color/black80"
                        android:textSize="@dimen/text12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginTop="@dimen/space15"
                android:layout_marginEnd="@dimen/space20"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text12"
                        android:layout_gravity="center"
                        android:background="@color/whiteColor"
                        android:visibility="gone"
                        android:src="@drawable/ic_likes_unselected"
                        android:contentDescription="@null" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/editProfileBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space45"
                        android:layout_marginTop="@dimen/space5"
                        android:layout_marginBottom="@dimen/space7"
                        android:textColor="@color/whiteColor"
                        android:fontFamily="@font/lato"
                        android:background="@drawable/button_bg_blue"
                        android:text="@string/edit_profile"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text12"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:background="@color/whiteColor"
                        android:src="@drawable/ic_likes_unselected"
                        android:contentDescription="@null" />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postedImagesRC"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/space8"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>